# ---------------------------------------------
# FTP CONFIG — Versión vulnerable 
# ---------------------------------------------

# --- Básico del servicio ---
listen=YES
listen_ipv6=NO
anonymous_enable=YES
local_enable=YES
write_enable=YES

# Permisos totalmente abiertos (barra libre)
anon_upload_enable=YES
anon_mkdir_write_enable=YES
anon_other_write_enable=YES
local_umask=000
anon_umask=000
file_open_mode=0777

# Que los usuarios locales también puedan hacer cosas
chroot_local_user=NO
allow_writeable_chroot=YES

# Mensajes y logs (para que Wazuh vea TODO)
dirmessage_enable=YES
use_localtime=YES
xferlog_enable=YES
xferlog_std_format=NO
log_ftp_protocol=YES
vsftpd_log_file=/var/log/vsftpd.log

# Conexiones y puertos
connect_from_port_20=YES
pasv_enable=YES
pasv_min_port=21000
pasv_max_port=21010

# Seguridad totalmente relajada
userlist_enable=NO
tcp_wrappers=NO

# Para hacerlo todavía más divertido:
# - No pedimos password “seria” al anónimo
no_anon_password=YES

# Banner opcional 
ftpd_banner=Bienvenido a FTP inseguro. Disfruta de tus shells

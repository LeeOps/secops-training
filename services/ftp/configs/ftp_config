# -------------------------------------------------------------
# vsftpd.conf — Configuración funcional mínima para entorno interno
# -------------------------------------------------------------

# Escucha en IPv6 (comportamiento por defecto en varias distros)
listen=NO
listen_ipv6=YES

# Desactivar acceso anónimo
anonymous_enable=NO

# Habilitar acceso de usuarios locales
local_enable=YES

# Permitir operaciones de escritura
write_enable=YES

# Mensajes al entrar en directorios
dirmessage_enable=YES

# Registro de actividad
use_localtime=YES
xferlog_enable=YES
vsftpd_log_file=/var/log/vsftpd.log

# Puerto de datos clásico de FTP
connect_from_port_20=YES

# Permisos por defecto al crear archivos
local_umask=022

# Confinar a los usuarios en su directorio personal
chroot_local_user=YES

# Desactivar TLS (solo para entornos controlados)
ssl_enable=NO

# No usar listas de usuarios
userlist_enable=NO

# Servicio PAM por defecto
pam_service_name=vsftpd
